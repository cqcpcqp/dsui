{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "target": "esnext",
    "baseUrl": "src",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "lib": ["esnext", "dom"]
  }
}
